  <body>
      <h1>Rezept hinzufügen</h1>
      <hr>
    <form id="addRezept" action="http://localhost:3001/rezepte/" method="post" enctype="application/x-www-form-urlencoded">
      <p><u>Rezeptname:</u></p>
        <input type="text" id="name" name="name"></br>
      <p><u>Zubereitung:</u></p>
