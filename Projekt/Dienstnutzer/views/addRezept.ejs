      <p><u>Level:</u></br>
        <label for="1">1</label><input type="radio" name="level" id="l1" value="1"><br>
        <label for="2">2</label><input type="radio" name="level" id="l2" value="2"><br>
        <label for="3">3</label><input type="radio" name="level" id="l3" value="3"><br><br>
		  <input id="submit" type="submit" value="Rezept erstellen" style="width: 320px; height:40px"></form>    
    <a href="http://localhost:3001/rezepte/<%= rezeptedata.id%>/zutatenliste"> <input type="button" value="Zutat hinzufügen" style="width: 320px; height:40px"</a>
     <form method="GET" action="http://localhost:3001" >
        <input type="submit" value="Startseite" style="width: 320px; height:40px"/>
    </form>

  </body>
