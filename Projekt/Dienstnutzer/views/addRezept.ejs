            <label for="2">2</label><input type="radio" name="level" id="l2" value="2"><br>
            <label for="3">3</label><input type="radio" name="level" id="l3" value="3"><br><br>-->
            
    <button type="submit" style="width: 320px; height:40px">Rezept speichern</button>
<!--    <input type="submit" id="rezepthinzu" name="submit" value="Rezept speichern" style="width: 320px; height:40px">-->
        </form>
        <section id="zutatenid" style="display:none">
                <form id="addZutatenliste" action="#" method="post" enctype="application/x-www-form-urlencoded">
                <h3>Zutat hinzufügen:</h3>
                <textarea id="zutat"  name="zutat" rows="2" cols="30"></textarea>
                <br><br>
                <input id="submit" type="submit" value="Zutat hinzufügen" style="width: 320px; height:40px">
                </form>
        </section>
            
     <form method="GET" action="http://localhost:3001" >
        <input type="submit" value="Startseite" style="width: 320px; height:40px"/>
    </form>

  </body>
</html>
